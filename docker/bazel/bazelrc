build --experimental_strict_action_env
build --genrule_strategy=remote
build --spawn_strategy=remote
build --strategy=Closure=remote
build --strategy=Javac=remote

# From https://github.com/bazelbuild/bazel-toolchains/blob/master/configs/ubuntu16_04_clang/1.1/toolchain.bazelrc
build --action_env=BAZEL_DO_NOT_DETECT_CPP_TOOLCHAIN=1

# Bazel Tools dependencies
build --host_java_toolchain=@bazel_tools//tools/jdk:toolchain_hostjdk8
build --java_toolchain=@bazel_tools//tools/jdk:toolchain_hostjdk8

# Pointing to latest aliases
build --crosstool_top=@bazel_toolchains//configs/ubuntu16_04_clang/latest:crosstool_top_default
build --extra_toolchains=@bazel_toolchains//configs/ubuntu16_04_clang/latest:toolchain_default
build --host_javabase=@bazel_toolchains//configs/ubuntu16_04_clang/latest:javabase
build --javabase=@bazel_toolchains//configs/ubuntu16_04_clang/latest:javabase

# Missing recommended configuration in latest
#build --extra_execution_platforms=@bazel_toolchains//configs/ubuntu16_04_clang/1.1:rbe_ubuntu1604
#build --host_platform=@bazel_toolchains//configs/ubuntu16_04_clang/1.1:rbe_ubuntu1604
#build --platforms=@bazel_toolchains//configs/ubuntu16_04_clang/1.1:rbe_ubuntu1604

# Additional settings.
build --action_env=PATH=/bin:/usr/bin
build --cpu=k8
build --host_cpu=k8

# From https://github.com/buildbarn/bb-deployments README.md

build --jobs=16
build --remote_instance_name=ubuntu16-04
